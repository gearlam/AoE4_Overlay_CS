<Window x:Class="AoE4OverlayCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:AoE4OverlayCS.Views"
        Title="AoE IV: Overlay (C# Remake)" Height="600" Width="800"
        Icon="pack://siteoforigin:,,,/img/aoe4_sword_shield.ico">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="{DynamicResource Menu_File}">
                <MenuItem Header="{DynamicResource Menu_File_HtmlFiles}" Click="OpenHtmlFiles_Click" />
                <MenuItem Header="{DynamicResource Menu_File_ConfigLogs}" Click="OpenConfigLogs_Click" />
                <MenuItem Header="{DynamicResource Menu_File_Exit}" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu_Settings}">
                <MenuItem Header="{DynamicResource Menu_Settings_LogMatches}" IsCheckable="True" IsChecked="{Binding Settings.LogMatches}"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu_Links}">
                <MenuItem Header="{DynamicResource Menu_Links_Github}" Command="{Binding OpenLinkCommand}" CommandParameter="https://github.com/gearlam/AoE4_Overlay_CS"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu_Language}">
                <MenuItem Header="{DynamicResource Menu_Language_English}" Click="SetLanguageEnglish_Click"/>
                <MenuItem Header="{DynamicResource Menu_Language_Chinese}" Click="SetLanguageChinese_Click"/>
            </MenuItem>
        </Menu>
        
        <TabControl>
            <TabItem Header="{DynamicResource Tab_Settings}">
                <views:SettingsView/>
            </TabItem>
            <TabItem Header="{DynamicResource Tab_Games}">
                <views:GamesView/>
            </TabItem>
            <TabItem Header="{DynamicResource Tab_Override}">
                <views:OverrideView/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
