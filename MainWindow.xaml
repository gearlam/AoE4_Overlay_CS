<Window x:Class="AoE4OverlayCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:AoE4OverlayCS.Views"
        Title="AoE IV: Overlay (C# Remake)" Height="640" Width="860" FontSize="14"
        MinHeight="520" MinWidth="720"
        Icon="pack://siteoforigin:,,,/img/aoe4_sword_shield.ico">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="{DynamicResource Menu_File}">
                <MenuItem Header="{DynamicResource Menu_File_HtmlFiles}" Click="OpenHtmlFiles_Click" />
                <MenuItem Header="{DynamicResource Menu_File_ConfigLogs}" Click="OpenConfigLogs_Click" />
                <MenuItem Header="{DynamicResource Menu_File_Exit}" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu_Settings}">
                <MenuItem Header="{DynamicResource Menu_Settings_LogMatches}" IsCheckable="True" IsChecked="{Binding Settings.LogMatches}"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu_Links}">
                <MenuItem Header="{DynamicResource Menu_Links_Github}" Command="{Binding OpenLinkCommand}" CommandParameter="https://github.com/gearlam/AoE4_Overlay_CS"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu_Language}">
                <MenuItem Header="{DynamicResource Menu_Language_English}" Click="SetLanguageEnglish_Click"/>
                <MenuItem Header="{DynamicResource Menu_Language_Chinese}" Click="SetLanguageChinese_Click"/>
            </MenuItem>
        </Menu>
        
        <TabControl>
            <TabControl.Resources>
                <Style TargetType="TabControl">
                    <Setter Property="BorderBrush" Value="#D0D0D0"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabControl">
                                <Grid SnapsToDevicePixels="True" ClipToBounds="True">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Background="#F7F7F7" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0,0,0,1">
                                        <UniformGrid Rows="1" IsItemsHost="True" Margin="10,8"/>
                                    </Border>

                                    <Border Grid.Row="1" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
                                        <ContentPresenter ContentSource="SelectedContent"/>
                                    </Border>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <Style TargetType="TabItem">
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Margin" Value="8,0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Bd" Background="#FFFFFF" BorderBrush="#CFCFCF" BorderThickness="1" CornerRadius="8" Padding="0,12">
                                    <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#E8F0FF"/>
                                        <Setter TargetName="Bd" Property="BorderBrush" Value="#7AA6FF"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="{DynamicResource Tab_Settings}">
                <views:SettingsView/>
            </TabItem>
            <TabItem Header="{DynamicResource Tab_Games}">
                <views:GamesView/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
