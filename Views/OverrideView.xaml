<UserControl x:Class="AoE4OverlayCS.Views.OverrideView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="25">
        <StackPanel>
            <TextBlock Text="{DynamicResource Override_Intro1}" FontSize="20" Margin="0,0,0,5"/>
            <TextBlock Text="{DynamicResource Override_Intro2}" FontSize="20" Margin="0,0,0,30"/>
            
            <CheckBox Content="{DynamicResource Override_PreventAutoUpdate}" 
                      IsChecked="{Binding PreventAutoUpdate}"
                      FontSize="18" Margin="0,0,0,30"/>
            
            <GroupBox Header="{DynamicResource Override_GroupHeader}" FontSize="16" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="{DynamicResource Override_Map}" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding OverrideMap}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="{DynamicResource Override_Mode}" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding OverrideMode}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="{DynamicResource Override_Server}" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding OverrideServer}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,20"/>
                    
                    <Button Content="{DynamicResource Override_Update}" Command="{Binding UpdateOverrideCommand}" 
                            Grid.Row="3" Grid.ColumnSpan="2" Height="40" FontSize="18"/>
                </Grid>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>
